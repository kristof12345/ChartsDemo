<Router AppAssembly="@typeof(Program).Assembly" PreferExactMatches="@true">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(Webpage.Components.AppLayout)" />
    </Found>
    <NotFound>
        <LayoutView Layout="@typeof(Webpage.Components.AppLayout)">
            <Common.Web.PageNotFound />
        </LayoutView>
    </NotFound>
</Router>
